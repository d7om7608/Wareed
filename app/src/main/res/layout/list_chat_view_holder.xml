<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mychats_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="18dp"
        android:text="صاحب الحاله: "
        android:textAlignment="textEnd"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:id="@+id/namePantent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toStartOf="@+id/textView9" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اسم المرسل : "
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_below="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginTop="16dp"
        android:id="@+id/textView10" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/senderName"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"

        android:text="رقم ملف المريض : "
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requstID"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toStartOf="@+id/textView11" />
</RelativeLayout>