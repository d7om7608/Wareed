<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.d7om7.wareed.RequestActivity"
    android:background="@color/colorwhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorwhite"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="com.example.d7om7.wareed.RequestActivity"
                android:weightSum="1">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/pantienName"
                    android:hint="Patient Name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:maxLength="20"
                    android:textSize="20sp"
                    android:textColor="@color/black" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:hint="Hospital File Number"
                    android:id="@+id/fileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:inputType="number"
                    android:maxLength="15"
                    />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:hint="Blood Bags Needed"
                    android:id="@+id/countBlood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:hint="Patient State"
                    android:id="@+id/reasonOfRequist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"  />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Blood Type"
                    android:layout_alignParentLeft="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"

                    android:layout_alignBottom="@+id/planets_spiner" />

                    <Spinner
                        android:id="@+id/planets_spiner"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:maxLength="70"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"></Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="City"
                        android:textSize="18sp"
                        android:layout_alignBottom="@+id/city_spiner" />

                    <Spinner
                    android:id="@+id/city_spiner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"

                        android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"></Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/Hospetal_spiner"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="13dp"
                        android:text="Hospital"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/Hospetal_spiner"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/colorAccent"></Spinner>

                </RelativeLayout>

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="5.43"
                    android:background="@drawable/red_gradient"
                    android:textSize="24sp"
                    android:textColor="@color/colorwhite"
                    android:onClick="onclick"
                    android:text="Add"
                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
