<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.d7om7.wareed.RequestActivity"
    android:background="@color/colorwhite"
    android:weightSum="1">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="470dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                tools:context="com.example.d7om7.wareed.RequestActivity"
                android:weightSum="1">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ScrollView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                <EditText
                    android:id="@+id/pantienName"
                    android:hint="Patient Name"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/group112"
                        android:id="@+id/imageView6"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:hint="Hospital File Number"
                    android:id="@+id/fileNumber"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="15"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/a1212"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:hint="Blood Bags Needed"
                    android:id="@+id/countBlood"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/a5432"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:hint="Patient State"
                    android:id="@+id/reasonOfRequist"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/imageView8" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/patientstate"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView8" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Blood Type"
                    android:layout_alignParentLeft="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"

                    android:layout_alignBottom="@+id/planets_spiner" />

                    <Spinner
                        android:id="@+id/planets_spiner"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:maxLength="70"
                        android:textColor="@color/colorAccent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"></Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="City"
                        android:textSize="18sp"
                        android:layout_alignBottom="@+id/city_spiner" />

                    <Spinner
                    android:id="@+id/city_spiner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"

                        android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"></Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/Hospetal_spiner"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="13dp"
                        android:text="Hospital"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/Hospetal_spiner"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/colorAccent"></Spinner>

                </RelativeLayout>



            </LinearLayout>
        </ScrollView>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/red_gradient"
        android:onClick="onclick"
        android:text="Add"
        android:textColor="@color/colorwhite"
        android:textSize="24sp"

         />
</LinearLayout>

