<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.d7om7.wareed.RequestActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.example.d7om7.wareed.RequestActivity">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text=" اسم المريض"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pantienName"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textColor="@color/colorAccent"

                android:text="رقم ملف المريض"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/fileNumber"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:inputType="number"
                android:maxLength="7"

                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textColor="@color/colorAccent"
                android:text="عدد اكياس الدم المطلوبة "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/countBlood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:inputType="number"
                android:textColor="@color/colorPrimary"
                android:maxLength="2"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textColor="@color/colorAccent"
                android:text="سبب التنويم"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/reasonOfRequist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/planets_spiner"
                android:layout_width="fill_parent"
                android:layout_margin="12dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"></Spinner>

            <Spinner
                android:id="@+id/city_spiner"
                android:layout_margin="12dp"
                android:layout_width="fill_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"></Spinner>

            <Spinner
                android:id="@+id/Hospetal_spiner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textColor="@color/colorAccent"></Spinner>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onclick"
                android:layout_marginTop="15dp"
                android:text="إضافة"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
