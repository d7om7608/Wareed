<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mix_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        android:layout_margin = "10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        >



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_edittext"
        android:hint="إسم المستخدم "
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:maxLength="20"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_edittext"
        android:hint="البريد الالكتروني"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/username_edittext"
        android:maxLength="50"
        android:layout_alignEnd="@+id/username_edittext" />

        <Spinner
            android:id="@+id/profile_bloodType_spinner"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/email_edittext"
            android:layout_alignStart="@+id/username_edittext"></Spinner>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="فئة الدم"
            android:textSize="18sp"
            android:layout_above="@+id/profile_city_spinner"
            android:layout_alignParentEnd="true" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المدينة"
        android:textSize="18sp"
        android:id="@+id/textView3"
            android:layout_alignTop="@+id/profile_city_spinner"
            android:layout_alignEnd="@+id/textView2" />


    <Spinner
        android:id="@+id/profile_city_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/profile_bloodType_spinner"
        android:layout_alignEnd="@+id/profile_bloodType_spinner"
        android:layout_alignStart="@+id/profile_bloodType_spinner" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حفظ"
        android:background="#1DE9B6"
        android:textSize="20sp"
        android:onClick="SaveSettingsOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الجنس"
        android:textSize="18sp"
        android:layout_alignTop="@+id/profile_gender_spinner"
        android:layout_alignStart="@+id/textView3" />

    <Spinner
        android:id="@+id/profile_gender_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_city_spinner"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/profile_city_spinner"
        android:layout_alignEnd="@+id/profile_city_spinner" />

    </RelativeLayout>


</RelativeLayout>