<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/relativeLayout3"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">



        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/ProgressBarProfile"/>


    <TextView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/white"
        android:text="My Profile"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:textColor="@color/DarkRed"
        android:id="@+id/textView7"
        android:background="@drawable/shadow"
        android:elevation="5dp"/>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_edittext"
        android:hint="User Name"
        android:textSize="18sp"
        android:maxLength="20"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_edittext"
        android:hint="Email"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:maxLength="50"
        android:layout_below="@+id/username_edittext"
        android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:textSize="18sp"
            android:inputType="number"
            android:maxLength="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/age"
            android:layout_below="@+id/email_edittext"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/TextDate"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/dateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Pick Last Blood Donation Date"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/age"
            android:layout_marginTop="12dp"
            android:background="@drawable/red_gradient"
            android:layout_alignParentStart="true" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:layout_below="@+id/TextDate"
    android:weightSum="1"
    android:id="@+id/linearLayout2"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/blood"
        android:alpha="0.7"
        android:layout_marginRight="5dp"
        android:id="@+id/imageView" />

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Type"
            android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView" />

    <Spinner
        android:id="@+id/profile_bloodType_spinner"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       ></Spinner>

</RelativeLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@drawable/red_gradient"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="SaveSettingsOnClick"
        android:id="@+id/button4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_below="@+id/relativeLayout"
    android:layout_alignEnd="@+id/relativeLayout3"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_alignParentStart="true">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/gender"
        android:id="@+id/imageView9"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView9" />

    <Spinner
        android:id="@+id/profile_gender_spinner"
        android:layout_width="150dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
         />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/city"
            android:id="@+id/imageView9"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="18sp"
            android:layout_alignParentTop="true"

            android:layout_toEndOf="@+id/imageView9" />


        <Spinner
            android:id="@+id/profile_city_spinner"
            android:layout_width="150dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"

             />

    </RelativeLayout>

</RelativeLayout>

</RelativeLayout>