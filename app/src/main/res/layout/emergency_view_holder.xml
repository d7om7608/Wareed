<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="9dp"

    android:background="@drawable/shadow"
    android:backgroundTint="@color/white"
    android:elevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/blood_pic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/group142" />

                <TextView
                    android:id="@+id/bloodTyep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/blood_pic"
                    android:layout_marginLeft="4.2dp"
                    android:layout_marginRight="4.2dp"
                    android:layout_marginTop="16dp"
                    android:text="AB+"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/reasonOfRequist"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/blood_pic"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@+id/blood_pic"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:text="Arm Surgery"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/cityAndHospital_textview"
                            android:layout_alignStart="@+id/reasonOfRequest"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/maskgroup4" />

                        <TextView
                            android:id="@+id/cityAndHospital_textview"
                            android:layout_width="225dp"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/reasonOfRequest"
                            android:layout_below="@+id/bloodTyep"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="4dp"
                            android:text="" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/statusTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/relativeLayoutvis"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignTop="@+id/reasonOfRequest"
                    android:layout_margin="5dp"
                    android:text="2017/8/16"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutVisibale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageViewNAV"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@+id/countOfblood"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.098"
                    android:scaleType="fitEnd"
                    android:src="@drawable/maskgroup5" />

                <TextView
                    android:id="@+id/file_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/imageViewNAV"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"

                    android:src="@drawable/group7" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <ImageView
                        android:id="@+id/countOfblood_pic"
                        android:layout_width="29dp"
                        android:layout_height="28dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/group151" />

                    <TextView
                        android:id="@+id/countOfblood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/countOfblood_pic"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                </RelativeLayout>

                <ImageView

                    android:id="@+id/chat_pic"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_alignTop="@+id/countDone_pic"
                    android:layout_toStartOf="@+id/imageViewNAV"

                    android:layout_weight="1"
                    android:src="@drawable/maskgroup12" />

                <ImageView

                    android:id="@+id/share"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_alignTop="@+id/countDone_pic"
                    android:layout_toStartOf="@+id/imageViewNAV"

                    android:layout_weight="1"
                    android:src="@drawable/share" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="305dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"

                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_button"
                    android:text="Going To Donate Blood"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>