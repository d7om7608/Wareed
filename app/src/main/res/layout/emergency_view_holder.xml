<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/reasonOfRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reasonOfRequest"
        android:layout_centerHorizontal="true"
        android:text="states time"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/statusTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="27dp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countOfrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statusTime"
        android:layout_marginTop="41dp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/countDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/countOfrequest"
        android:layout_marginTop="19dp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bloodTyep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/countDone"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="20sp" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="التفاصيل"
    android:onClick="details"
    android:layout_below="@+id/bloodTyep"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="45dp" />
</RelativeLayout>